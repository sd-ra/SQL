aalter view dbo.v_Nachkalkulation
/*
24.03.22 ra 78731 
*/
as
select d.NameKurz as Kunde, cast(t.TeileNr as varchar) + ' ' + t.ModellBez + ' ' + t.ModellNr as Teil, n.*, 
	round(SollAufwandMin * Kostensatz, 2) as Sollkosten,
	round(IstAufwandMin * Kostensatz, 2) as Istkosten,
	round(IstAufwandMin * Kostensatz, 2) - round(SollAufwandMin * Kostensatz, 2) as Mehrkosten
from (
	select * from v_KernzeitenSollIst
) n
inner join Teile t on n.TeileNr = t.TeileNr
inner join Debitor d on t.KundenNr = d.KundenNr
